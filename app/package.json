{
    "name": "microblog-app",
    "version": "1.0.0",
    "description": "A single-user microblog application built with Node.js, React, Express, TailwindCSS, and PostgreSQL",
    "main": "index.js",
    "scripts": {
        "start": "node index.js",
        "babel_install": "npm install --save-dev babel-preset-env",
        "dev": "nodemon index.js",
        "client": "cd client && npm start",
        "server": "nodemon server/index.js",
        "build": "cd client && npm run build",
        "install-client": "cd client && npm install",
        "install-server": "cd server && npm install",
        "docker:build": "docker-compose build",
        "docker:up": "docker-compose up",
        "docker:down": "docker-compose down"
    },
    "dependencies": {
        "axios": "^1.5.0",
        "concurrently": "^7.6.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-session": "^1.17.3",
        "marked": "^5.0.2",
        "next": "13.4.5",
        "pg": "^8.11.0",
        "pg-hstore": "^2.3.4",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-router-dom": "^6.14.1",
        "tailwindcss": "^3.3.2"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-preset-env": "^1.7.0",
        "nodemon": "^3.0.1",
        "webpack": "^5.1.4",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.1.0",
        "babel-loader": "^9.2.1",
        "@babel/core": "^7.25.2",
        "@babel/preset-env": "^7.25.4",
        "@babel/preset-react": "^7.24.7",
        "typescript": "^5.6.2",
        "ts-loader": "^9.5.1",
        "sass": "^1.79.3",
        "css-loader": "^7.1.2",
        "style-loader": "^4.0.0",
        "sass-loader": "^10.5.2"
    },
    "engines": {
        "node": "22.x"
    },
    "keywords": [
        "microblog",
        "nodejs",
        "express",
        "react",
        "tailwindcss",
        "postgresql"
    ],
    "author": "Your Name",
    "license": "MIT",
    "type": "module"
}
